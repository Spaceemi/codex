#include <bits/stdc++.h>
using namespace std;

int main(){

int n,k,n2,suma,ac=0;
vector<int>v;
cin>>n>>k;
for (int i=0; i<n; i++){
    cin>>n2;
   v.push_back(n2);

    
}
for(int j=n-1; j>=0; j-- ){
    k-=v[j];
    if(k<0){
        cout<<ac; 
        return 0;
    }
    ac++;
}


//for(auto i:v)cout<<i<<" ";




}
